<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a0122554m.kohweilun.projectassignment.MainActivity">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />


    <!-- Remove once facebook login redirect to lessons list is done. -->
    <Button
        android:id="@+id/LessonListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lesson_list_button"
        android:onClick="onClick_GoToLessonList"/>

    <!-- Temporary -->
    <Button
        android:id="@+id/BeaconButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/beacon_button"
        android:onClick="onClick_GoToBeaconActivity"/>

</LinearLayout>
