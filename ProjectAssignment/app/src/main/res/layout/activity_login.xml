<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.a0122554m.kohweilun.projectassignment.LoginActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/light_grey"
        android:textColor="@color/lime_green"
        android:text="@string/no_internet_button"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="onClick_NoInternetAccess"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/login_imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/padawan_app_logo"
        android:onClick="onClick_GoToMainActivity" />
</LinearLayout>
